	private static WebDriver createDriver(DriverType driverType) {
		switch (environmentType) {
		case LOCAL:
			driver = createLocalDriver( driverType);
			break;
		case REMOTE:
			driver = createRemoteDriver();
			break;
		}
		return driver;
	}

