	private void writeJsonFile() {
		Map<String, Object> objectMap = new HashMap<String, Object>();
		DateTimeFormatter dtf = DateTimeFormatter.ofPattern("dd/MM/yyyy HH:mm:ss");
		LocalDateTime now = LocalDateTime.now();
